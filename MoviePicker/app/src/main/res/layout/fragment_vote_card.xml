<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mcv_vote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:strokeColor="@color/border"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeWidth="1dip"
    android:layout_margin="@dimen/distance_extra_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance_small"
        android:orientation="vertical">



        <com.google.android.material.card.MaterialCardView
            android:id="@+id/img_voteImageCard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:strokeColor="@color/border"
            app:strokeWidth="1dip">
            <ImageView
                android:id="@+id/img_votePoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/txv_voteTitle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_voteImageCard"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_marginStart="@dimen/distance_small"
            tools:text="2001: A Space Odyssey"/>


        <TextView
            android:id="@+id/txv_voteYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txv_voteTitle"
            app:layout_constraintStart_toEndOf="@id/img_voteImageCard"
            app:layout_constraintEnd_toStartOf="@id/txv_voteRuntime"
            android:layout_marginTop="@dimen/distance_small"
            android:layout_marginStart="@dimen/distance_small"
            tools:text="1968"/>
        <TextView
            android:id="@+id/txv_voteRuntime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txv_voteTitle"
            app:layout_constraintStart_toEndOf="@id/txv_voteYear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txv_voteYear"
            android:layout_marginStart="@dimen/distance_small"
            tools:text="149 min."/>

        <TextView
            android:id="@+id/txv_voteVotesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txv_voteYear"
            app:layout_constraintStart_toEndOf="@id/img_voteImageCard"
            app:layout_constraintEnd_toStartOf="@id/txv_voteRuntime"
            android:layout_marginTop="@dimen/distance_medium"
            android:layout_marginStart="@dimen/distance_small"
            android:text="@string/text_votes"/>
        <TextView
            android:id="@+id/txv_voteVotes"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txv_voteYear"
            app:layout_constraintStart_toEndOf="@id/txv_voteVotesText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/txv_voteVotesText"
            android:layout_marginStart="@dimen/distance_small"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="4"/>

        <Button
            android:id="@+id/btn_voteAddVote"
            android:layout_width="wrap_content"
            app:layout_constraintHorizontal_bias="1"
            app:flow_verticalBias="0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txv_voteVotesText"
            app:layout_constraintStart_toEndOf="@id/img_voteImageCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/distance_small"
            android:layout_marginTop="@dimen/distance_small"
            android:text="@string/text_add_vote"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>